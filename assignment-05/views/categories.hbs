<div class="row">
  <div class="col-md-12">
    <div class="controller">
      <h2>Categories</h2>
      <button class="overriden"><a href="/categories/add" class="btn btn-success pull-right">Add Category</a></button>
    </div>
    
    <hr />
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Category ID</th>
            <th>Category Name</th>
          </tr>
        </thead>
          <tbody>
            {{#each categories}}
            <tr>
              <td><a href="/posts?category={{this.id}}">{{this.id}}</a></td>
              <td><a href="/posts?category={{this.id}}">{{this.category}}</a></td>
              <td><a class="btn btn-danger" href="categories/delete/{{this.id}}">remove</a></td>
            </tr>
            
            {{/each}}
          </tbody>
      </table>

    </div>
    {{#unless posts}}
        <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
        </div>
  {{/unless}}
  </div>
</div>