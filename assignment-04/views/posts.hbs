<div class="row">
  <div class="col-md-12">
    {{#unless posts}}
      <strong>{{message}}</strong>
    {{/unless}}
    <h2>Posts</h2>
    <hr />
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Post ID</th>
            <th>Title</th>
            <th>Post Date</th>
            <th>Category</th>
            <th>Published</th>
          </tr>
          
            <tbody>
              {{#each posts}}
              <tr>
                <td>{{id}}</td>
                <td>{{title}}</td>
                <td>{{postDate}}</td>
                <td><a href="/posts?category={{this.category}}">{{this.category}}</a></td>
                <td>{{published}}</td>

              </tr>
              {{/each}}
            </tbody>
        </thead>
      </table>
    </div>

  </div>
</div>